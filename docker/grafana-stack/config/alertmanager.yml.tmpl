global:
  resolve_timeout: 5m
  smtp_smarthost: 'smtp.mail.yahoo.com:587'
  smtp_from: '${SMTP_FROM}'
  smtp_auth_username: '${SMTP_USERNAME}'
  smtp_auth_password: '${SMTP_PASSWORD}'
  smtp_require_tls: true

route:
  receiver: email-team
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h

receivers:
  - name: email-team
    email_configs:
      - to: '${ALERT_EMAIL}'
        send_resolved: true
