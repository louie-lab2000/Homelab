server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /var/lib/promtail/positions.yaml

clients:
  - url: {{ loki_url }}

scrape_configs:
  # Systemd journal (captures kubelet, containerd, k3s services)
  - job_name: journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ inventory_hostname_short }}
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: unit
      - source_labels: ['__journal_priority_keyword']
        target_label: priority

  # General var logs
  - job_name: varlogs
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          host: {{ inventory_hostname_short }}
          __path__: /var/log/*.log

  # K3s logs (if file-based logging is enabled)
  - job_name: k3s
    static_configs:
      - targets:
          - localhost
        labels:
          job: k3s
          host: {{ inventory_hostname_short }}
          __path__: /var/log/k3s*.log
